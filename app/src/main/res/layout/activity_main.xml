<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/artsy">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="60dp"
                android:fontFamily="cursive"
                android:text="Navidraft"
                android:gravity="center|top"
                android:textColor="@color/colorPrimary"
                android:textSize="50dp"
                android:textStyle="bold" />

            <ProgressBar
                android:id="@+id/progressBarSpinner"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:indeterminate="true" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/TestConnTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:text="Testing Connection"
            android:gravity="center|top"
            android:layout_centerInParent="true"
            android:textColor="@color/colorPrimary"
            android:textSize="12dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/CompTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:text="Initializing Components"
            android:gravity="center|top"
            android:textColor="@color/colorPrimary"
            android:layout_centerInParent="true"
            android:textSize="12dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/LaunchTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:text="Finalizing Assets"
            android:gravity="center|top"
            android:textColor="@color/colorPrimary"
            android:layout_centerInParent="true"
            android:textSize="12dp"
            android:textStyle="bold" />

    </RelativeLayout>
</LinearLayout>